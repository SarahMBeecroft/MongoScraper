<!--Homepage-->
<div class='container'>
    <div class='col-md-12 jumbotron'>
        <div>
            <h1 class="display-4">NPR News Mongo Scraper</h1>
        </div>
    </div>

    <div class='col-md-12'>
        {{#if article}}
            {{#each article}}
            <div class='panel panel-default'>
                <div class='panel-heading'>
                    <h4>{{this.title}}</h4>
                </div>
                <div class='panel-body'>
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target='_blank'>{{this.link}}</a>
                    <br><br>
                    <button type='button' class='btn btn-success save' data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class='panel panel-default'>
            <div class='panel-body'>
            <h4>No new articles! Click the 'Scrape New Artices!' button to retrieve the latest headlines.</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>